<h2> Matches of <%= current_user.name  %> </h2>

<% @matches.each do |match| %>
  <% if match.day < Date.tomorrow %>
    <p>
      <% if match.day === Date.today %>
        Today (<%= match.day %>):
      <% else %>
        <%= match.day %>:
      <% end %>
      You are matched with
      <% if match.student_1 === current_user %>
        <%= match.student_2.name %>
      <% else %>
        <%= match.student_1.name %>
      <% end %>
    </p>
  <% end %>
<% end %>
